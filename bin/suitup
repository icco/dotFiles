#!/usr/bin/env bash
#
# Script for syncing all of my projects with the appropriate version control systems.
#
# Author: Nat Welch (nat@natwelch.com)

# First Param is directory name
sync_dir () {
  f=$1

  if [ -d $PROJ$f ]; then
    echo "--------> $f"
    cd $PROJ$f;
    rm -f .DS_Store
    if [ -d $PROJ$f/.git/ ]; then
      git fetch --prune
      git pull
      git status -sb
      return 0;
    elif [ -d $PROJ$f/.svn/ ]; then
      svn up
      return 0;
    else
      return 1;
    fi
  fi;
}

PROJ=~/Projects/
if [ -d $PROJ ]; then
  echo "# ~/Projects --------------------------------------------------------------------------------"
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi

PROJ=~/Sites/
if [ -d $PROJ ]; then
  echo "# ~/Sites -----------------------------------------------------------------------------------"
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi

PROJ=~/Work/
if [ -d $PROJ ]; then
  echo "# ~/Work ------------------------------------------------------------------------------------"
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi

echo "All Done!"
