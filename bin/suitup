#!/usr/bin/env bash
#
# Script for syncing all of my projects with the appropriate version control systems.
#
# Author: Nat Welch (nat@natwelch.com)

if [ -x /google/data/ro/projects/loas/loas_check ]; then
  if ! /google/data/ro/projects/loas/loas_check &> /dev/null; then
    prodaccess
  fi
fi

# First Param is directory name
sync_dir () {
  f=$1

  if [ -d $PROJ$f ]; then
    echo "--------> $f"
    cd $PROJ$f;
    if [ -d $PROJ$f/.git/ ]; then
      git pull;
      return 0;
    elif [ -f $PROJ$f/VERSION_MAP ]; then
      g4 sync -q
      return 0;
    # Duplicated because I can't get the or stmt to work.
    elif [ -f $PROJ$f/.p4config ]; then
      g4 sync
      return 0;
    elif [ -d $PROJ$f/.svn/ ]; then
      svn up
      return 0;
    else
      return 1;
    fi
  fi;
}

PROJ=~/Projects/
if [ -d $PROJ ]; then
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi

PROJ=~/Sites/
if [ -d $PROJ ]; then
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi

PROJ=/google/src/cloud/$USER/
if [ -d $PROJ ]; then
  for e in $(ls $PROJ | sort -f); do
    sync_dir $e
    if [ $? -eq 1 ]; then
      echo "No known version control."
    fi
  done;
fi
