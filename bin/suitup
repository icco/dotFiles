#!/usr/bin/env bash

PROJ=~/Projects/
PROD=""

for f in $(ls $PROJ | sort -fr); do
  if [ -d $PROJ$f ]; then
    echo "--------> $f"
    cd $PROJ$f;
    if [ -d $PROJ$f/.git/ ]; then
      git pull;
    elif [ -f $PROJ$f/.srcfs_workspace ]; then
      if [ ! $PROD ]; then
        prodaccess
        PROD="YES"
      fi
      g4 sync
    elif [ -d $PROJ$f/.svn/ ]; then
      svn up
    else
      echo "No known version control."
    fi
  fi;
done;
