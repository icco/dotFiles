#!/usr/bin/env ruby
# @author Nat Welch

require 'shellwords'

# TODO: Move constansts into config file
SERVER = "snowball.local"
USER = "nat"

ARTISTS = [
   'Broken Social Scene',
   'Dave Matthews Band',
   'Graycat',
   'Moby',
   'Passion Pit',
   'Pogo',
   'Radiohead',
   'Yoko Kanno',
   'iLIKETRAINS'
]

ARTISTS.sort.each do |artist|
   local = File.join(File.expand_path("~/Music/"), Shellwords.escape(artist))
   remote = "~nat/Music/#{Shellwords.escape(artist)}"
   rsync = "rsync -aP --delete #{USER}@#{SERVER}:\"#{remote}/\" #{local}"
   puts rsync
   Kernel.system(rsync)
end
