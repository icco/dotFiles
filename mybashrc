# my bashrc to use on cal poly servers


# Seriously, CSC machines only.
DNS=`dnsdomainname | grep csc.calpoly.edu`;
HOS=`hostname | grep csc.calpoly.edu`;
if [ `echo $DNS$HOS` ]; then
   # It'd be cool to load a specific CSC motd right here...
   mesg n

   [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.

   #PS1='\n[\d \@]\n[\u@\h: \w]$ '
   
   #if [ -f ~/.bash_SQL ]; then
   #	. ~/.bash_SQL
   #fi

   echo '===> Loaded .mybashrc'
fi

