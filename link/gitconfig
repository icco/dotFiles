	browse = false
[rebase]
	stat = true
[help]
	autocorrect = 1
[credential]
	helper = store
[daemon]
	uploadarch = true
[push]
	default = current
	autosetupremote = true
[http]
	cookiefile = ~/.gitcookies
[diff]
	submodule = log
	algorithm = histogram
[fetch]
	prune = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[pull]
